{
  "ConnectionStrings": {
    "DefaultConnection": "Host={hostname};Port=5432;Database=smartscheduler;Username={username};Password={password}"
  },
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-chars-change-in-production-at-least-32-chars",
    "JwtExpiry": "01:00:00",
    "RefreshTokenExpiry": "7.00:00:00",
    "Issuer": "SmartScheduler",
    "Audience": "SmartSchedulerAPI"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AvailabilityEngine": {
    "BufferTimeMinutes": 15
  },
  "GoogleMaps": {
    "ApiKey": "your-google-maps-api-key-here"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "AllowedHosts": "*"
}
